{
    "name": "mean-ts",
    "version": "1.0.0",
    "main": "bin/www",
    "private": true,
    "scripts": {
        "heroku-postbuild": "node build.js",
        "start": "node \"bin/www.js\"",
        "build": "npm run tsc -- --watch false",
        "build:watch": "npm run tsc -- --watch true",
        "build:prod": "npm run tsc -- --watch false --sourceMap false",
        "tsc": "node \"node_modules/typescript/bin/tsc\"",
        "nodemon": "node node_modules/nodemon/bin/nodemon.js"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "cookie-parser": "^1.4.3",
        "express": "^4.16.3",
        "express-session": "^1.15.6",
        "mongoose": "^5.0.7",
        "morgan": "^1.7.35"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/cookie-parser": "^1.4.1",
        "@types/express": "^4.11.1",
        "@types/express-session": "^1.15.8",
        "@types/mongoose": "^5.0.7",
        "@types/morgan": "^1.7.35",
        "nodemon": "^1.17.3",
        "shelljs": "^0.8.1",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2"
    }
}
